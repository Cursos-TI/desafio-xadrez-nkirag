#include <stdio.h>

int main() {
    // ===========================================
    // Desafio: Movimentando as Peças do Xadrez
    // Peças: Torre, Bispo, Rainha e Cavalo
    // ===========================================

    // Quantidade de casas que cada peça vai se mover
    int casasTorre = 5;
    int casasBispo = 5;
    int casasRainha = 8;

    // -------------------------------------------
    // Movimento da TORRE (usando for)
    // -------------------------------------------
    printf("Movimento da Torre:\n");

    // A torre anda em linha reta — aqui vamos simular 5 casas para a direita.
    for (int i = 0; i < casasTorre; i++) {
        printf("Direita\n");
    }

    printf("\n");

    // -------------------------------------------
    // Movimento do BISPO (usando while)
    // -------------------------------------------
    printf("Movimento do Bispo:\n");

    // O bispo anda na diagonal (cima + direita).
    int contadorBispo = 0;
    while (contadorBispo < casasBispo) {
        printf("Cima, Direita\n");
        contadorBispo++;
    }

    printf("\n");

    // -------------------------------------------
    // Movimento da RAINHA (usando do-while)
    // -------------------------------------------
    printf("Movimento da Rainha:\n");

    // A rainha pode ir pra qualquer direção — aqui, 8 casas para a esquerda.
    int contadorRainha = 0;
    do {
        printf("Esquerda\n");
        contadorRainha++;
    } while (contadorRainha < casasRainha);

    printf("\n");

    // -------------------------------------------
    // Movimento do CAVALO (usando loops aninhados)
    // -------------------------------------------
    printf("Movimento do Cavalo:\n");

    // O cavalo anda em "L" — duas casas para baixo e uma para a esquerda.
    // Vamos usar um loop for para o movimento principal (para baixo)
    // e um while dentro dele para o movimento final (para a esquerda).

    int movimentosBaixo = 2;
    int movimentosEsquerda = 1;

    for (int i = 0; i < movimentosBaixo; i++) {
        printf("Baixo\n");
        // Quando o cavalo terminar as duas casas pra baixo,
        // ele faz o movimento em "L" indo pra esquerda.
        if (i == movimentosBaixo - 1) {
            int contadorEsquerda = 0;
            while (contadorEsquerda < movimentosEsquerda) {
                printf("Esquerda\n");
                contadorEsquerda++;
            }
        }
    }

    printf("\nFim da simulação!\n");

    return 0;
}
