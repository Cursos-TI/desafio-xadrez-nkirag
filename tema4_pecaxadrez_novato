#include <stdio.h>

int main() {
    // ===========================================
    // Desafio: Movimentando as Peças do Xadrez
    // Peças: Torre, Bispo e Rainha
    // Cada uma usa uma estrutura de repetição diferente
    // ===========================================

    // Quantidade de casas que cada peça vai se mover
    int casasTorre = 5;
    int casasBispo = 5;
    int casasRainha = 8;

    // -------------------------------------------
    // Movimento da TORRE (usando for)
    // -------------------------------------------
    printf("Movimento da Torre:\n");

    // A torre anda em linha reta, então aqui vamos
    // simular ela andando 5 casas pra direita.
    for (int i = 0; i < casasTorre; i++) {
        printf("Direita\n");
    }

    printf("\n");

    // -------------------------------------------
    // Movimento do BISPO (usando while)
    // -------------------------------------------
    printf("Movimento do Bispo:\n");

    // O bispo anda na diagonal, então nesse caso
    // vamos fazer ele subir e ir pra direita ao mesmo tempo.
    int contadorBispo = 0;
    while (contadorBispo < casasBispo) {
        printf("Cima, Direita\n");
        contadorBispo++;
    }

    printf("\n");

    // -------------------------------------------
    // Movimento da RAINHA (usando do-while)
    // -------------------------------------------
    printf("Movimento da Rainha:\n");

    // A rainha pode ir pra qualquer lado, mas aqui
    // vamos fazer ela andar 8 casas pra esquerda.
    int contadorRainha = 0;
    do {
        printf("Esquerda\n");
        contadorRainha++;
    } while (contadorRainha < casasRainha);

    printf("\nFim da simulação!\n");

    return 0;
}
